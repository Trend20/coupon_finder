{
  "manifest_version": 3,
  "name": "Coupon Finder",
  "version": "1.0",
  "description": "Automatically find and apply the best coupons at checkout.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Coupon Finder"
  },
  "icons": {
    "16": "logo.svg",
    "48": "logo.svg",
    "128": "logo.svg"
  }
}
